<ExerciseScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 50

        MDLabel:
            id: information_label
            text: "Information"
            font_size: 24
            size_hint_y: None
            height: 40
            opacity: 0  # Initially hidden until user chooses to show

        MDLabel:
            id: character_label
            text: "Character"
            font_size: 20
            opacity: 0  # Initially hidden until user chooses to show
            size_hint_y: None
            height: 40

        MDLabel:
            id: action_label
            text: "Action"
            font_size: 20
            opacity: 0  # Initially hidden until user chooses to show
            size_hint_y: None
            height: 40

        MDLabel:
            id: object_label
            text: "Object"
            font_size: 20
            opacity: 0  # Initially hidden until user chooses to show
            size_hint_y: None
            height: 40

        MDBoxLayout:
            size_hint_y: None
            height: 40
            MDRaisedButton:
                text: "Show Solution"
                on_release: root.show_solution()  # Show the PAO details

        MDBoxLayout:
            size_hint_y: None
            height: 40
            MDRaisedButton:
                text: "Right"
                on_release: root.record_response('right')
            MDRaisedButton:
                text: "Wrong"
                on_release: root.record_response('wrong')
            MDRaisedButton:
                text: "Right but Difficult"
                on_release: root.record_response('difficult')

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            MDRaisedButton:
                text: "Back"
                on_release: app.root.current = 'main'