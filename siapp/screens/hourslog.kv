<HoursSummaryList@MDBoxLayout>:
    date: ""
    work_time: ""
    lunch_break: ""
    work_break: ""
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    edit_association: None
    association_id: 0

    MDLabel:
        text: root.date
    MDLabel:
        text: root.work_time
    MDLabel:
        text: root.lunch_break
    MDLabel:    
        text: root.work_break

<HoursLogScreen>:
    MDBoxLayout:
        padding: 20
        spacing: 20
        orientation: 'vertical'
        MDBoxLayout:
            size_hint_y: 0.15
            orientation: 'horizontal'
            spacing: 20
            MDRaisedButton:
                id: hourslog
                text: "You are Logged Out"
                md_bg_color: (0, 1, 0, 1)
                on_release: root.add_log(self)
            MyLabelBox:
                id: worked_hours_today
                box_color: 0.0, 0.75, 0.71, 1
                title_text: "Worked Hours Today"
                main_text: ""
                main_text_opacity: "1"
        MDBoxLayout:
            size_hint_y: 0.1
            spacing: 20
            orientation: 'horizontal'
            MDRaisedButton:
                id: export
                text: "Export data"
                on_release: root.export()

        # Horizontal Divider Line
        BoxLayout:
            size_hint_y: None
            height: 1  # Set the height of the line
            canvas.before:
                Color:
                    rgba: 0.0, 0.75, 0.71, 1  # Black color
                Rectangle:
                    size: self.size
                    pos: self.pos
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                size_hint_y: 0.06
                orientation: 'horizontal'
                MDLabel:
                    valign: "center"
                    halign: "left"
                    text: "Date"
                    bold: True
                MDLabel:
                    valign: "center"
                    halign: "left"
                    text: "Work Time"
                    bold: True
                MDLabel:
                    valign: "center"
                    halign: "left"
                    text: "Lunch Break"
                    bold: True
                MDLabel:
                    valign: "center"
                    halign: "left"
                    text: "Pause"
                    bold: True

            RecycleView:
                id: hours_summary
                viewclass: 'HoursSummaryList'  # Use custom item layout
                RecycleBoxLayout:
                    default_size: None, dp(25)
                    size_hint_y: None
                    default_size_hint: 1, None
                    height: self.minimum_height
                    orientation: 'vertical'