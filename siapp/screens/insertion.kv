<ListItem@BoxLayout>:
    information_text: ""
    character_text: ""
    action_text: ""
    object_text: ""
    response_time: ""

    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)

    Label:
        text: root.information_text
    Label:
        text: root.character_text
    Label:
        text: root.action_text
    Label:
        text: root.object_text
    Label:
        text: root.response_time

<InsertionScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 3
        padding: 3

        BoxLayout:
            #canvas.before:
            #    Color:
            #        rgba: 0, 1, 0, 1
            #    Rectangle:
            #        # self here refers to the widget i.e FloatLayout
            #        pos: self.pos
            #        size: self.size
            size_hint_y: 4 
            background_color: 0, 0, 0, 0.1
            orientation: 'vertical'
            Label:
                text: "Inserimento - Crea Associazione"
                font_size: 24
                size_hint_y: 0.2

            BoxLayout:
                orientation: 'horizontal'
                padding: 5
                TextInput:
                    id: information
                    hint_text: 'Informazione'
                    multiline: False

                Image:
                    id: information_image  # This will be accessed in Python code to update the image source
                    allow_stretch: False
                    keep_ratio: True

                Button:
                    text: "Choose an Image"
                    size_hint_x: 0.4
                    on_release: root.open_filechooser_info()  # Calls the method to open the file chooser

            BoxLayout:
                orientation: 'horizontal'
                padding: 5
                BoxLayout:
                    orientation: 'vertical'
                    TextInput:
                        id: character
                        hint_text: 'Personaggio'
                        multiline: False

                    TextInput:
                        id: action
                        hint_text: 'Azione'
                        multiline: False

                    TextInput:
                        id: object
                        hint_text: 'Oggetto'
                        multiline: False

                Image:
                    id: pao_image  # This will be accessed in Python code to update the image source
                    allow_stretch: True
                    keep_ratio: True

                Button:
                    text: "Choose an Image"
                    size_hint_x: 0.4
                    on_release: root.open_filechooser_pao()  # Calls the method to open the file chooser

            BoxLayout:
                padding: 5
                orientation: 'horizontal'
                size_hint_y: 0.25
                Button:
                    text: "Salva Associazione"
                    on_release: root.save_association(information.text, character.text, action.text, object.text, information_image.source, pao_image.source)

                Button:
                    text: "Indietro"
                    on_release: app.root.current = 'main'
        BoxLayout:
            orientation: 'vertical'
            #canvas.before:
            #    Color:
            #        rgba: 0, 1, 0, 1
            #    Rectangle:
            #        # self here refers to the widget i.e FloatLayout
            #        pos: self.pos
            #        size: self.size
            BoxLayout:
                size_hint_y: 0.2
                orientation: 'horizontal'
                Label:
                    text: "Informazione"
                    bold: True
                Label:
                    text: "Personaggio"
                    bold: True
                Label:
                    text: "Azione"
                    bold: True
                Label:
                    text: "Oggetto"
                    bold: True
                Label:
                    text: "Tempo di Risposta"
                    bold: True

            RecycleView:
                id: associations_list
                viewclass: 'ListItem'  # Use custom item layout

                RecycleBoxLayout:
                    default_size: None, dp(25)
                    default_size_hint: 1, None
                    height: self.minimum_height
                    orientation: 'vertical'