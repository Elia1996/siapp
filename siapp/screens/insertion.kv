<ListItem@MDBoxLayout>:
    information_text: ""
    character_text: ""
    action_text: ""
    object_text: ""
    response_time: ""
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    edit_association: None
    association_id: 0

    MDLabel:
        text: root.information_text
        font_size: 15
    MDLabel:
        text: root.character_text
        font_size: 15
    MDLabel:
        size_hint_x: 2.5
        text: root.action_text
        font_size: 15
    MDLabel:    
        size_hint_x: 1.5
        text: root.object_text
        font_size: 15
    MDLabel:
        text: root.response_time
        font_size: 15
    MDRaisedButton:
        size_hint_x: 0.1
        size_hint_y: 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        text_color: app.theme_cls.primary_color
        on_release: root.edit_association(root.association_id)

    

<InsertionScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 3

        MDBoxLayout:
            #canvas.before:
            #    Color:
            #        rgba: 0, 1, 0, 1
            #    Rectangle:
            #        # self here refers to the widget i.e FloatLayout
            #        pos: self.pos
            #        size: self.size
            size_hint_y: 3
            padding: 5
            spacing: 5
            background_color: 0, 0, 0, 0.1
            orientation: 'vertical'
            MDLabel:
                text: "Inserimento - Crea Associazione"
                font_size: 24
                size_hint_y: 0.2

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5
                spacing: 5
                TextInput:
                    id: information
                    hint_text: 'Informazione'
                    multiline: False

                MDCard:
                    Image:
                        id: information_image  # This will be accessed in Python code to update the image source
                        allow_stretch: False
                        keep_ratio: True

                MDRaisedButton:
                    text: "Choose an Image"
                    size_hint_x: 0.4
                    on_release: root.open_filechooser_info()  # Calls the method to open the file chooser

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5
                spacing: 5
                MDBoxLayout:
                    spacing: 5
                    orientation: 'vertical'
                    TextInput:
                        id: character
                        hint_text: 'Personaggio'
                        multiline: False

                    TextInput:
                        id: action
                        hint_text: 'Azione'
                        multiline: False

                    TextInput:
                        id: object
                        hint_text: 'Oggetto'
                        multiline: False

                MDCard:
                    Image:
                        id: pao_image  # This will be accessed in Python code to update the image source
                        allow_stretch: False
                        keep_ratio: True

                MDRaisedButton:
                    text: "Choose an Image"
                    size_hint_x: 0.4
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.open_filechooser_pao()  # Calls the method to open the file chooser

            MDBoxLayout:
                padding: 5
                spacing: 5
                orientation: 'horizontal'
                size_hint_y: 0.25
                MDRaisedButton:
                    text: "Salva Associazione"
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.save_association(information.text, character.text, action.text, object.text, information_image.source, pao_image.source)

                MDRaisedButton:
                    text: "Indietro"
                    md_bg_color: app.theme_cls.primary_color
                    on_release: app.root.current = 'main'
        MDBoxLayout:
            orientation: 'vertical'
            #canvas.before:
            #    Color:
            #        rgba: 0, 1, 0, 1
            #    Rectangle:
            #        # self here refers to the widget i.e FloatLayout
            #        pos: self.pos
            #        size: self.size
            MDBoxLayout:
                size_hint_y: 0.3
                orientation: 'horizontal'
                MDLabel:
                    text: "Informazione"
                    font_size: 15
                    bold: True
                MDLabel:
                    text: "Personaggio"
                    font_size: 15
                    bold: True
                MDLabel:
                    size_hint_x: 2.5
                    font_size: 15
                    text: "Azione"
                    bold: True
                MDLabel:
                    size_hint_x: 1.5
                    font_size: 15
                    text: "Oggetto"
                    bold: True
                MDLabel:
                    text: "Tempo di Risposta"
                    font_size: 15
                    bold: True
                MDLabel:
                    text: "Edit"
                    size_hint_x: 0.6
                    font_size: 15
                    bold: True

            RecycleView:
                id: associations_list
                viewclass: 'ListItem'  # Use custom item layout
                RecycleBoxLayout:
                    default_size: None, dp(25)
                    size_hint_y: None
                    default_size_hint: 1, None
                    height: self.minimum_height
                    orientation: 'vertical'