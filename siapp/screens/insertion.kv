<ListItem@MDBoxLayout>:
    information_text: ""
    character_text: ""
    action_text: ""
    object_text: ""
    response_time: ""
    height: self.minimum_height
    edit_association: None
    association_id: 0
    insertionscreen: None
    orientation: 'horizontal'
    spacing: 5

    MDLabel:
        size_hint_x: 1
        text: root.information_text
        font_size: 15
    MDLabel:
        size_hint_x: 1.5
        text: root.character_text
        font_size: 15
    MDLabel:
        size_hint_x: 2
        text: root.action_text
        font_size: 15
    MDLabel:    
        size_hint_x: 1.5
        text: root.object_text
        font_size: 15
    MDLabel:
        size_hint_x: 1.3
        text: root.response_time
        font_size: 15

    MDBoxLayout:  # Wrapping button in a layout with a set width
        size_hint_x: 0.6
        MDIconButton:
            id: option_button_insertion
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: 1
            size_hint_y: 0.8
            on_release: root.insertionscreen.open_edit_menu(root)
            icon: "pencil-outline"
            theme_bg_color: "Custom"
            md_bg_color: app.theme_cls.primary_color
            style: "tonal"

    

<InsertionScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 3

        MDBoxLayout:
            #canvas.before:
            #    Color:
            #        rgba: 0, 1, 0, 1
            #    Rectangle:
            #        # self here refers to the widget i.e FloatLayout
            #        pos: self.pos
            #        size: self.size
            size_hint_y: 3
            padding: 5
            spacing: 5
            background_color: 0, 0, 0, 0.1
            orientation: 'vertical'
            MDLabel:
                text: "Inserimento - Crea Associazione"
                font_size: 24
                size_hint_y: 0.2

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5
                spacing: 5
                TextInput:
                    id: information
                    hint_text: 'Informazione'
                    multiline: False

                MDCard:
                    Image:
                        id: information_image  # This will be accessed in Python code to update the image source

                MDRaisedButton:
                    text: "Choose an Image"
                    size_hint_x: 0.4
                    on_release: root.open_filechooser("info")  # Calls the method to open the file chooser

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5
                spacing: 5
                MDBoxLayout:
                    spacing: 5
                    orientation: 'vertical'
                    TextInput:
                        id: character
                        hint_text: 'Personaggio'
                        multiline: True
                        do_wrap: True

                    TextInput:
                        id: action
                        hint_text: 'Azione'
                        multiline: True
                        do_wrap: True

                    TextInput:
                        id: object
                        hint_text: 'Oggetto'
                        multiline: True
                        do_wrap: True

                MDCard:
                    Image:
                        id: pao_image  # This will be accessed in Python code to update the image source

                MDRaisedButton:
                    text: "Choose an Image"
                    size_hint_x: 0.4
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.open_filechooser("pao")  # Calls the method to open the file chooser

            MDBoxLayout:
                padding: 5
                spacing: 5
                orientation: 'horizontal'
                size_hint_y: 0.25
                MDRaisedButton:
                    id: save_association_button
                    text: "Salva Associazione"
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.save_association()

                MDRaisedButton:
                    id: update_association_button
                    text: "Update Associazione"
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.update_association()
                    opacity: 0
                
                MDRaisedButton:
                    id: cancel_update_button
                    text: "Cancel Association Edit"
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.cancel_update()
                    opacity: 0
                
                MDLabel:
                    id: association_id_label
                    text: ""
                    bold: True
                    opacity: 0

        MDBoxLayout:
            orientation: 'vertical'
            padding: 10
            #canvas.before:
            #    Color:
            #        rgba: 0, 1, 0, 1
            #    Rectangle:
            #        # self here refers to the widget i.e FloatLayout
            #        pos: self.pos
            #        size: self.size
            MDBoxLayout:
                size_hint_y: 0.2
                orientation: 'horizontal'
                MDLabel:
                    size_hint_x: 1
                    text: "Info"
                    bold: True
                MDLabel:
                    size_hint_x: 1.5
                    text: "Personaggio"
                    bold: True
                MDLabel:
                    size_hint_x: 2
                    text: "Azione"
                    bold: True
                MDLabel:
                    size_hint_x: 1.5
                    text: "Oggetto"
                    bold: True
                MDLabel:
                    size_hint_x: 1.3
                    text: "Tempo di\nRisposta"
                    bold: True
                MDLabel:
                    text: "Edit"
                    size_hint_x: 0.6
                    bold: True

            RecycleView:
                id: associations_list
                viewclass: 'ListItem'  # Use custom item layout
                RecycleBoxLayout:
                    default_size: None, dp(40)
                    size_hint_y: None
                    default_size_hint: 1, None
                    height: self.minimum_height
                    orientation: 'vertical'